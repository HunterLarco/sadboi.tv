/// User

model User {
  id String @id @map("_id")

  handle UserHandle

  dateCreated DateTime @default(now())
}

type UserHandle {
  name String

  selectedColor UserHandleColor
  availableColors UserHandleColor[]

  selectedBadges UserBadge[]
  availableBadges UserBadge[]
}

enum UserHandleColor {
  Unknown
  Green
  Turquoise
  Lavender
  Violet
  Pink
  Red
  Orange
  Yellow

  // A special sadbot-only color + style.
  SadBot
}

enum UserBadge {
  Unknown

  // A special sadbot-only badge.
  SadBot
}

/// BroadcastEvent

model BroadcastEvent {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  details BroadcastEventDetails
  timestamp DateTime @default(now())

  @@index([timestamp])
}

type BroadcastEventDetails {
  // Only one of these fields should be set.
  chatMessage ChatMessageEvent?
  userHandleChange UserHandleChangeEvent?
  userEnterChat UserEnterChatEvent?
}

type ChatMessageEvent {
  authorId String
  preservedHandle UserHandle
  payload ChatMessagePayload
}

type ChatMessagePayload {
  // Only one of these fields should be set.
  text ChatMessageTextPayload?
}

type ChatMessageTextPayload {
  value String
}

type UserHandleChangeEvent {
  userId String
  before UserHandle
  after UserHandle
}

type UserEnterChatEvent {
  userId String
  preservedHandle UserHandle
}

/// Playbill

model Playbill {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  startDate DateTime
  acts Act[]
}

type Act {
  type ActType
  media Media
  whyWeChoseThis String
}

enum ActType {
  Content
  Bump
}

type Media {
  title String
  credits MediaCredit[]
  outlinks Outlink[]
  playback MediaPlayback
}

type MediaCredit {
  role String?
  creator Creator
}

type MediaPlayback {
  // Only one of the below should be set.
  video VideoPlayback?
  audio AudioPlayback?
}

type VideoPlayback {
  muxAssetId String
}

type AudioPlayback {
  muxAssetId String
}

type Creator {
  name String
  outlinks Outlink[]
}

type Outlink {
  uri String
}

/// AuthToken

model AuthToken {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  scopes AuthScope[]

  // If not set, the token never expires.
  expiry DateTime?

  dateIssued DateTime @default(now())
}

type AuthScope {
  code AuthScopeCode

  // Optional foreign key designating a target for the scope. For example, if
  // this scope provides DOCUMENT_EDITING permissions, the target might be a
  // document key--whereas for a PASSWORD_RESET permission, the target might be
  // a user key.
  target String
}

enum AuthScopeCode {
  UserAuth // target is the userId
}

/// Counters

model Counters {
  name String @id @map("_id")
  count Int @default(0)
}

/// MessageHistory

model MessageHistory {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  message String

  dateCreated DateTime @default(now())
}

/// Prisma configuration

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
